
{% extends "base.html.twig" %}

{% block css %}
   <link rel="stylesheet" src="{{ asset('assets/css/articles.css') }}">
{% endblock %}

{% block title %}Liste des articles{% endblock %}

{% block main %}
   {% for article in articles %}
      <article>
         <h2>{{ article.title }}</h2>
         <p>{{ article.content }}</p>
         <img class="article-image" src="{{ article.image }}">
         <a href="{{ path('article', {'id':article.id}) }}">voir l'article</a>
      </article>
   {% endfor %}
{% endblock %}
